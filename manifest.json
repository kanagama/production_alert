{
  "manifest_version": 3,
  "name": "production alert",
  "version": "1.1.0",
  "description": "保存してあるURLと一致したらアラートを出す。表示後10分間再表示なし。",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [{
    "matches": [ "http://*/*", "https://*/*" ],
    "js":[
      "js/jQuery.js", "js/content.js"
    ],
    "run_at": "document_end"
  }],
  "permissions": [
    "storage"
  ]
}
